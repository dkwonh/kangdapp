<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbcbcb">

    <TextView
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:id="@+id/lunch"
        android:layout_below="@+id/morning"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:gravity="center|start"
        android:background="#ffffff"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:id="@+id/deener"
        android:layout_below="@+id/lunch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:gravity="center|start"
        android:background="#ffffff"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아침"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/morning"
        android:layout_toStartOf="@+id/morning"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점심"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/lunch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/deener"
        android:layout_toLeftOf="@+id/lunch"
        android:layout_toStartOf="@+id/lunch"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="1dp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저녁"
        android:id="@+id/textView13"
        android:layout_below="@+id/lunch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/deener"
        android:layout_toLeftOf="@+id/lunch"
        android:layout_toStartOf="@+id/lunch"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#ffffff" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:id="@+id/morning"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="center|start"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp" />
</RelativeLayout>